@using RoomManagement.Areas.Admin.Models.VoucherModel;
@model VoucherEditModel;

@{
    ViewData["Title"] = "Thêm/ Cập nhập Voucher";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <h4>Thêm/ Cập nhập Voucher</h4>
            <form method="post"
                  enctype="multipart/form-data"
                  asp-area="Admin"
                  asp-controller="Voucher"
                  asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id">
                @* tên phòng  *@
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger"
                              asp-validation-for="Name"></span>
                    </div>
                </div>

                @* Slug*@

                <div class="form-group">
                    <label asp-for="UrlSlug" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="UrlSlug">
                        <span class="text-danger"
                              asp-validation-for="UrlSlug"></span>
                    </div>
                </div>
                @* mô tả về phòng  *@

                <div class="form-group">
                    <label asp-for="Description" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Description">
                        <span class="text-danger"
                              asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="col-sm-5 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" asp-for="Discount">
                        <span class="text-danger"
                              asp-validation-for="Discount"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Lưu các thay đổi
                    </button>
                    <a class="btn btn-danger"
                       asp-area="Admin"
                       asp-controller="Voucher"
                       asp-action="Index">
                        Hủy & Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/speakingurl/speakingurl.min.js"></script>

    <script>
        $(function () {
            $('#Name').change(function () {
                var slug = getSlug(this.value);
                console.log(slug);
                $('#UrlSlug').val(slug).trigger('blur');
            });
        });
    </script>
}