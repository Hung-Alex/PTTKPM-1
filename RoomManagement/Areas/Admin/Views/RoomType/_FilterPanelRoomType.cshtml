@using RoomManagement.Areas.Admin.Models.RoomTypeModel;
@model RoomTypeFilterModel

<form asp-area="Admin"
      asp-controller="RoomType"
      asp-action="Index"
      method="get"
      class="row gy-2 gx-3 align-items-center mt-4 mb-4">

    <div class="col-auto">

        <input type="text"
               class="form-control"
               asp-for="Name"
               placeholder="Nhập từ khoá..." />
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">
            Tìm/Lọc
        </button>

        <a asp-area="Admin"
           asp-controller="RoomType"
           asp-action="Edit"
           class="btn btn-success">
            Thêm mới
        </a>
    </div>
    <div class="col-auto">

        <a asp-area="Admin"
           asp-controller="RoomType"
           asp-action="Index"
           class="btn btn-success">
            Bỏ Lọc
        </a>
    </div>
</form>